<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_register"
    android:orientation="vertical"
    android:padding="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="CREAR CUENTA"
                    android:textColor="@android:color/background_light"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/pacifico" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="DATOS PERSONALES"
                    android:textColor="#FFFB8BF5"
                    android:textSize="27sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/pacifico" />

                <TextView
                    android:id="@+id/txvNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="NOMBRE:"
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp"
                    app:fontFamily="@font/pacifico" />

                <EditText
                    android:id="@+id/edtNombre"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/boton_registrate_redondo"
                    android:ems="10"
                    android:hint="Nombre"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:textColor="#38068f"
                    android:textColorHint="#A4A4A4" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="APELLIDOS:"
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp"
                    app:fontFamily="@font/pacifico" />

                <EditText
                    android:id="@+id/edtApellido"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/boton_registrate_redondo"
                    android:ems="10"
                    android:hint="Apellido"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:textColor="#38068f"
                    android:textColorHint="#A4A4A4" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="DIA DE NACIMIENTO:"
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp"
                    app:fontFamily="@font/pacifico" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edtDia"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:background="@drawable/boton_registrate_redondo"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="DD"
                        android:inputType="date"
                        android:paddingLeft="10dp"
                        android:textColorHint="#A4A4A4" />

                    <EditText
                        android:id="@+id/edtMes"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:background="@drawable/boton_registrate_redondo"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="MM"
                        android:inputType="date"
                        android:paddingLeft="10dp"
                        android:textColorHint="#A4A4A4" />

                    <EditText
                        android:id="@+id/edtAno"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:background="@drawable/boton_registrate_redondo"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="YYYY"
                        android:inputType="date"
                        android:paddingLeft="10dp"
                        android:textColorHint="#A4A4A4" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="NUMERO DE TELEFONO:"
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp"
                    app:fontFamily="@font/pacifico" />

                <EditText
                    android:id="@+id/edtNumeroTelefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Name" />

                <TextView
                    android:id="@+id/txvObservaciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="OBSERVACIONES: "
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp"
                    app:fontFamily="@font/pacifico" />

                <EditText
                    android:id="@+id/edtObservaciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Name" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:text="DATOS DE USUARIO"
                    android:textColor="#FFFB8BF5"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/pacifico" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="NOMBRE DE USUARIO:"
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp"
                    app:fontFamily="@font/pacifico" />

                <EditText
                    android:id="@+id/edtNombreUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Name" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="CORREO ELECTRONICO:"
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp"
                    app:fontFamily="@font/pacifico" />

                <EditText
                    android:id="@+id/edtCorreoElectronico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Name" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="CONTRASEÑA:"
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp"
                    app:fontFamily="@font/pacifico" />

                <EditText
                    android:id="@+id/edtContrasena"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Name" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="VUELVE A INTRODUCIR LA CONTRASEÑA:"
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp"
                    app:fontFamily="@font/pacifico" />

                <EditText
                    android:id="@+id/edtContrasenados"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Name" />

                <Button
                    android:id="@+id/btnRegistrar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_iniciar_sesion"
                    android:text="Registrar" />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>
</RelativeLayout>